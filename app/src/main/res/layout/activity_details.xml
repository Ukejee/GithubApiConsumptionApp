<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailsActivity">

    <TextView
            android:text="Repository Name:"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/repo_name_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"/>
    <TextView
            android:text="Author:"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/repo_author_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/repo_name_title"/>

    <TextView
            android:text="Stars:"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:id="@+id/repo_star_title"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/repo_author_title"/>

    <TextView
            android:text="Url:"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/repo_url_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/repo_star_title"/>

    <TextView
            android:text="Description:"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/repo_des_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/repo_url_title"/>

    <TextView
            android:text="Repo Name"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/repo_name_title"
            android:layout_marginStart="130dp"/>

    <TextView
            android:text="Repo's Author"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/authorsName"
            app:layout_constraintStart_toStartOf="@+id/repo_author_title"
            android:layout_marginStart="130dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/name"/>

    <TextView
            android:text="Repo's Stars"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/repoStar"
            app:layout_constraintStart_toStartOf="@+id/repo_star_title"
            android:layout_marginStart="130dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/authorsName"/>

    <TextView
            android:text="Repo's Url"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/repoUrl"
            app:layout_constraintStart_toStartOf="@+id/repo_url_title"
            android:layout_marginStart="130dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/repoStar"/>

    <TextView
            android:text="Repo's Description"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/repoDescription"
            app:layout_constraintStart_toStartOf="@+id/repo_des_title"
            android:layout_marginStart="130dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/repoUrl"/>

</android.support.constraint.ConstraintLayout>